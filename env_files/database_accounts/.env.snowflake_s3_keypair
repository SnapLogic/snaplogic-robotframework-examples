# ============================================================================
#                      SNOWFLAKE DATABASE ACCOUNT - KEY PAIR AUTHENTICATION
# ============================================================================
# Snowflake account with Key Pair authentication and S3 integration
# This configuration uses RSA key pair authentication instead of password
#
# SECURITY WARNING: Never commit sensitive credentials to version control.
# Store private keys and passphrases securely in your local .env file or CI/CD environment variables.
# ============================================================================

# Account Label
SNOWFLAKE_ACCOUNT_PAYLOAD_KEY_PAIR_FILE_NAME=acc_snowflake_s3_keypair.json


SNOWFLAKE_KEYPAIR_ACCOUNT_NAME=snowflake_keypair_acct

# Authentication Configuration
SNOWFLAKE_KEYPAIR_AUTHENTICATION_TYPE=Key Pair
SNOWFLAKE_KEYPAIR_USERNAME=username
SNOWFLAKE_KEYPAIR_PRIVATE_KEY=
SNOWFLAKE_KEYPAIR_PRIVATE_KEY_PASSPHRASE=

# Connection Configuration
SNOWFLAKE_KEYPAIR_HOSTNAME=hostname
SNOWFLAKE_KEYPAIR_PORT=443

# Database Configuration
SNOWFLAKE_KEYPAIR_DATABASE=INTUIT_TTUS_DB_E2E
SNOWFLAKE_KEYPAIR_WAREHOUSE=INTUIT_TTUS_STAGING_WH
SNOWFLAKE_KEYPAIR_SCHEMA=
SNOWFLAKE_KEYPAIR_ROLE=INTUIT_TTUS_EXT_DATA_INGESTOR

# JDBC Configuration
SNOWFLAKE_KEYPAIR_JDBC_DRIVER_CLASS=net.snowflake.client.jdbc.SnowflakeDriver
SNOWFLAKE_KEYPAIR_JDBC_JAR=artemis.log.2025-07-01

# S3 Configuration (External Stages)
SNOWFLAKE_KEYPAIR_S3_BUCKET=
SNOWFLAKE_KEYPAIR_S3_FOLDER=
SNOWFLAKE_KEYPAIR_S3_ACCESS_KEY_ID=
SNOWFLAKE_KEYPAIR_S3_SECRET_KEY=
SNOWFLAKE_KEYPAIR_S3_AWS_TOKEN=
SNOWFLAKE_KEYPAIR_S3_STORAGE_INTEGRATION=

# Connection Pool Configuration
SNOWFLAKE_KEYPAIR_BATCH_SIZE=1
SNOWFLAKE_KEYPAIR_FETCH_SIZE=100
SNOWFLAKE_KEYPAIR_MIN_POOL_SIZE=3
SNOWFLAKE_KEYPAIR_MAX_POOL_SIZE=50
SNOWFLAKE_KEYPAIR_MAX_LIFETIME_MINUTES=60
SNOWFLAKE_KEYPAIR_IDLE_TIMEOUT_MINUTES=5
SNOWFLAKE_KEYPAIR_CHECKOUT_TIMEOUT_MS=10000

# URL Properties
SNOWFLAKE_KEYPAIR_URL_PROPERTY1=allowUnderscoresInHost
SNOWFLAKE_KEYPAIR_URL_PROPERTY1_VALUE=true
SNOWFLAKE_KEYPAIR_URL_PROPERTY2=role
SNOWFLAKE_KEYPAIR_URL_PROPERTY2_VALUE=role2

