# ============================================
# Salesforce configuration for local Docker mock instance
# Container: salesforce-api-mock
# ============================================

# Account payload file name can be found at this location "../../test/suite/test_data/accounts_payload"
SALESFORCE_ACCOUNT_PAYLOAD_FILE_NAME=acc_salesforce.json

SALESFORCE_ACCOUNT_NAME=sfdc_acct
SALESFORCE_USERNAME=slim@snaplogic.com
SALESFORCE_PASSWORD=test
SALESFORCE_SECURITY_TOKEN=test
SALESFORCE_LOGIN_URL=https://salesforce-api-mock:8443
SALESFORCE_SANDBOX=true
SALESFORCE_API_VERSION=59.0

# Port mapping configuration
# WireMock HTTP port (host port that maps to container port 8080)
SALESFORCE_HTTP_PORT=8089
# WireMock HTTPS port (host port that maps to container port 8443)
SALESFORCE_HTTPS_PORT=8443
# JSON Server for persistent data (host port that maps to container port 3000)
SALESFORCE_JSON_PORT=8082
