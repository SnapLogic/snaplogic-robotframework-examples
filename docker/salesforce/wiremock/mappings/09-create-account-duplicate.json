{
  "name": "Create Account - Duplicate Record",
  "priority": 2,
  "request": {
    "method": "POST",
    "urlPathPattern": "/services/data/v[0-9]+\\.[0-9]+/sobjects/Account",
    "bodyPatterns": [
      {
        "contains": "DUPLICATE"
      }
    ]
  },
  "response": {
    "status": 400,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": [
      {
        "message": "You're creating a duplicate record. We recommend you use an existing record instead.",
        "errorCode": "DUPLICATES_DETECTED",
        "fields": [],
        "duplicateResult": {
          "allowSave": true,
          "duplicateRule": "Standard_Account_Duplicate_Rule",
          "matchResults": [
            {
              "entityType": "Account",
              "matchRecords": [
                {
                  "record": {
                    "Id": "001000000000001AAA",
                    "Name": "Acme Corporation"
                  }
                }
              ]
            }
          ]
        }
      }
    ]
  }
}