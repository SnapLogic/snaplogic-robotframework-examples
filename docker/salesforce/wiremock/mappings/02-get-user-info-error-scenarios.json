{
  "name": "Get User Info - Error Scenarios",
  "priority": 4,
  "request": {
    "method": "GET",
    "urlPathPattern": "/id/([0-9a-zA-Z]+)/([0-9a-zA-Z]+)"
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "id": "{{request.url}}",
      "asserted_user": true,
      "user_id": "{{regex request.path '.*/(\\w+)$'}}",
      "organization_id": "{{regex request.path '.*/([\\w]+)/[\\w]+$'}}",
      "username": "{{randomValue type='ALPHANUMERIC' length=8}}@test.com",
      "display_name": "Test User {{randomValue type='NUMERIC' length=3}}",
      "email": "test{{randomValue type='NUMERIC' length=3}}@example.com",
      "active": true,
      "user_type": "STANDARD",
      "language": "en_US",
      "locale": "en_US",
      "utcOffset": -28800000,
      "last_modified_date": "{{now}}"
    },
    "transformers": ["response-template"]
  },
  "scenarioName": "UserInfoScenarios",
  "requiredScenarioState": "Started",
  "newScenarioState": "Authenticated"
}