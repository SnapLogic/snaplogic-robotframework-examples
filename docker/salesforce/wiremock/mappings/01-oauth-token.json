{
  "priority": 1,
  "name": "Salesforce OAuth Token",
  "request": {
    "method": "POST",
    "urlPathPattern": "/services/oauth2/token"
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "access_token": "00D000000000000!mock.token.{{randomValue type='ALPHANUMERIC' length=32}}",
      "instance_url": "https://salesforce-api-mock:8443",
      "id": "https://salesforce-api-mock:8443/id/00D000000000000EAA/005000000000000AAA",
      "token_type": "Bearer",
      "issued_at": "{{now epoch}}",
      "signature": "{{randomValue type='ALPHANUMERIC' length=44}}"
    },
    "transformers": ["response-template"]
  }
}
