{
  "priority": 1,
  "name": "Proxy Get Account by ID to JSON Server",
  "request": {
    "method": "GET",
    "urlPathPattern": "/services/data/v[0-9]+\\.[0-9]+/sobjects/Account/([^/]+)"
  },
  "response": {
    "proxyBaseUrl": "http://salesforce-json-mock",
    "transformers": ["response-template"],
    "headers": {
      "Content-Type": "application/json"
    },
    "transformerParameters": {
      "urlRewrite": {
        "from": "/services/data/v[0-9]+\\.[0-9]+/sobjects/Account/([^/]+)",
        "to": "/accounts/$1"
      },
      "bodyTransform": {
        "type": "json",
        "capitalizeFields": true,
        "addFields": {
          "attributes": {
            "type": "Account",
            "url": "/services/data/v59.0/sobjects/Account/{{request.pathSegments.[5]}}"
          }
        }
      }
    }
  }
}
