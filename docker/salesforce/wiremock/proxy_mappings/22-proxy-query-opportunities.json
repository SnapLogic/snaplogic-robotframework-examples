{
  "priority": 1,
  "name": "Proxy Query Opportunities",
  "request": {
    "method": "GET",
    "urlPathPattern": "/services/data/v[0-9]+\\.[0-9]+/query",
    "queryParameters": {
      "q": {
        "contains": "Opportunity"
      }
    }
  },
  "response": {
    "proxyBaseUrl": "http://salesforce-json-mock/opportunities",
    "transformers": ["response-template"],
    "headers": {
      "Content-Type": "application/json"
    },
    "transformerParameters": {
      "bodyTransform": {
        "type": "soqlResponse",
        "wrapInSalesforceFormat": true,
        "template": {
          "totalSize": "{{size response.body}}",
          "done": true,
          "records": "{{response.body}}"
        }
      }
    }
  }
}