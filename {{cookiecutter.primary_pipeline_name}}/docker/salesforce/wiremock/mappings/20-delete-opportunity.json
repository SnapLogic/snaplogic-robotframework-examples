{
  "priority": 1,
  "name": "Delete Opportunity - Log to JSON Server via Webhook",
  "request": {
    "method": "DELETE",
    "urlPathPattern": "/services/data/v[0-9]+\\.[0-9]+/sobjects/Opportunity/[A-Za-z0-9]+"
  },
  "response": {
    "status": 204,
    "transformers": ["response-template"]
  },
  "serveEventListeners": [
    {
      "name": "webhook",
      "parameters": {
        "method": "POST",
        "url": "http://salesforce-json-mock/opportunity_deletes",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{\"_sfId\": \"{{request.pathSegments.[5]}}\", \"_operation\": \"DELETE\", \"_timestamp\": \"{{now}}\"}"
      }
    }
  ]
}
