{
  "priority": 1,
  "name": "Query Leads via SOQL",
  "request": {
    "method": "GET",
    "urlPathPattern": "/services/data/v[0-9]+\\.[0-9]+/query.*",
    "queryParameters": {
      "q": {
        "contains": "Lead"
      }
    }
  },
  "response": {
    "status": 200,
    "headers": { "Content-Type": "application/json" },
    "jsonBody": {
      "totalSize": 1,
      "done": true,
      "records": [
        {
          "attributes": {
            "type": "Lead",
            "url": "/services/data/v59.0/sobjects/Lead/00Q000000000TEST01"
          },
          "Id": "00Q000000000TEST01",
          "FirstName": "John",
          "LastName": "Smith",
          "Company": "Acme Inc",
          "Email": "john.smith@acme.com",
          "Phone": "(555) 345-6789",
          "Status": "Open - Not Contacted",
          "LeadSource": "Web"
        }
      ]
    },
    "transformers": ["response-template"]
  }
}
