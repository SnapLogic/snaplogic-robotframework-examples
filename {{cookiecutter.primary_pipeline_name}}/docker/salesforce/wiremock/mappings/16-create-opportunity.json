{
  "priority": 1,
  "name": "Create Opportunity - Persist to JSON Server via Webhook",
  "request": {
    "method": "POST",
    "urlPathPattern": "/services/data/v[0-9]+\\.[0-9]+/sobjects/Opportunity"
  },
  "response": {
    "status": 201,
    "headers": { "Content-Type": "application/json" },
    "jsonBody": {
      "id": "006{{randomValue type='ALPHANUMERIC' length=15 uppercase=true}}",
      "success": true,
      "errors": []
    },
    "transformers": ["response-template"]
  },
  "serveEventListeners": [
    {
      "name": "webhook",
      "parameters": {
        "method": "POST",
        "url": "http://salesforce-json-mock/opportunities",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{originalRequest.body}}"
      }
    }
  ]
}
